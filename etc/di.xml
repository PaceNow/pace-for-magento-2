<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- Payment Method Facade configuration -->
    <virtualType name="PayFacade" type="Magento\Payment\Model\Method\Adapter">
        <arguments>
            <argument name="code" xsi:type="const">\Pace\Pay\Model\Ui\ConfigProvider::CODE
            </argument>
            <argument name="formBlockType" xsi:type="string">Magento\Payment\Block\Form</argument>
            <argument name="infoBlockType" xsi:type="string">Pace\Pay\Block\Info</argument>
            <argument name="valueHandlerPool" xsi:type="object">PayValueHandlerPool</argument>
            <argument name="commandPool" xsi:type="object">PayCommandPool</argument>
        </arguments>
    </virtualType>

    <!-- Configuration reader -->
    <virtualType name="PayConfig" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="const">\Pace\Pay\Model\Ui\ConfigProvider::CODE
            </argument>
        </arguments>
    </virtualType>

    <!-- Zend Client with JSON converter -->
    <virtualType name="JsonConverterZendClient" type="Magento\Payment\Gateway\Http\Client\Zend">
        <arguments>
            <argument name="converter" xsi:type="object">
                \Pace\Pay\Gateway\Http\PayJsonConverter
            </argument>
            <argument name="logger" xsi:type="object">PayLogger</argument>
        </arguments>
    </virtualType>

    <!-- Logger, initialized with PayConfig -->
    <virtualType name="PayLogger" type="Magento\Payment\Model\Method\Logger">
        <arguments>
            <argument name="config" xsi:type="object">PayConfig</argument>
        </arguments>
    </virtualType>

    <type name="Pace\Pay\Gateway\Http\Client\ClientMock">
        <arguments>
            <argument name="logger" xsi:type="object">PayLogger</argument>
        </arguments>
    </type>

    <!-- Empty Client with logger -->
    <type name="Pace\Pay\Gateway\Http\Client\EmptyClient">
        <arguments>
            <argument name="logger" xsi:type="object">PayLogger</argument>
        </arguments>
    </type>

    <!-- Commands infrastructure -->
    <virtualType name="PayCommandPool" type="Magento\Payment\Gateway\Command\CommandPool">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="authorize" xsi:type="string">PayAuthorizeCommand</item>
                <item name="capture" xsi:type="string">PayCaptureCommand</item>
                <item name="void" xsi:type="string">PayVoidCommand</item>
                <item name="initialize" xsi:type="string">PayInitCommand</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Init command -->
    <virtualType name="PayInitCommand"
                 type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">PayInitRequest</argument>
            <argument name="transferFactory" xsi:type="object">
                Pace\Pay\Gateway\Http\EmptyTransferFactory
            </argument>
            <argument name="client" xsi:type="object">Pace\Pay\Gateway\Http\Client\EmptyClient
            </argument>
        </arguments>
    </virtualType>

    <!-- Init Request -->
    <virtualType name="PayInitRequest"
                 type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="transaction" xsi:type="string">
                    Pace\Pay\Gateway\Request\InitRequest
                </item>
            </argument>
        </arguments>
    </virtualType>
    <type name="Pace\Pay\Gateway\Request\InitRequest">
        <arguments>
            <argument name="config" xsi:type="object">PayConfig</argument>
        </arguments>
    </type>

    <!-- Authorize command -->
    <virtualType name="PayAuthorizeCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">PayAuthorizationRequest</argument>
            <argument name="handler" xsi:type="object">PayResponseHandlerComposite</argument>
            <argument name="transferFactory" xsi:type="object">
                Pace\Pay\Gateway\Http\TransferFactory
            </argument>
            <argument name="client" xsi:type="object">Pace\Pay\Gateway\Http\Client\ClientMock
            </argument>
        </arguments>
    </virtualType>

    <!-- Authorization Request -->
    <virtualType name="PayAuthorizationRequest"
                 type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="transaction" xsi:type="string">
                    Pace\Pay\Gateway\Request\AuthorizationRequest
                </item>
                <item name="mockData" xsi:type="string">Pace\Pay\Gateway\Request\MockDataRequest
                </item>
            </argument>
        </arguments>
    </virtualType>
    <type name="Pace\Pay\Gateway\Request\AuthorizationRequest">
        <arguments>
            <argument name="config" xsi:type="object">PayConfig</argument>
        </arguments>
    </type>

    <!-- Capture command -->
    <virtualType name="PayCaptureCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">
                Pace\Pay\Gateway\Request\CaptureRequest
            </argument>
            <argument name="handler" xsi:type="object">Pace\Pay\Gateway\Response\TxnIdHandler
            </argument>
            <argument name="transferFactory" xsi:type="object">
                Pace\Pay\Gateway\Http\TransferFactory
            </argument>
            <argument name="validator" xsi:type="object">
                Pace\Pay\Gateway\Validator\ResponseCodeValidator
            </argument>
            <argument name="client" xsi:type="object">Pace\Pay\Gateway\Http\Client\ClientMock
            </argument>
        </arguments>
    </virtualType>

    <!-- Capture Request -->
    <type name="Pace\Pay\Gateway\Request\CaptureRequest">
        <arguments>
            <argument name="config" xsi:type="object">PayConfig</argument>
        </arguments>
    </type>

    <!-- Void command -->
    <virtualType name="PayVoidCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">Pace\Pay\Gateway\Request\VoidRequest
            </argument>
            <argument name="handler" xsi:type="object">Pace\Pay\Gateway\Response\TxnIdHandler
            </argument>
            <argument name="transferFactory" xsi:type="object">
                Pace\Pay\Gateway\Http\TransferFactory
            </argument>
            <argument name="validator" xsi:type="object">
                Pace\Pay\Gateway\Validator\ResponseCodeValidator
            </argument>
            <argument name="client" xsi:type="object">Pace\Pay\Gateway\Http\Client\ClientMock
            </argument>
        </arguments>
    </virtualType>

    <!-- Void Request -->
    <type name="Pace\Pay\Gateway\Request\VoidRequest">
        <arguments>
            <argument name="config" xsi:type="object">PayConfig</argument>
        </arguments>
    </type>

    <!-- Response handlers -->
    <virtualType name="PayResponseHandlerComposite"
                 type="Magento\Payment\Gateway\Response\HandlerChain">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="txnid" xsi:type="string">Pace\Pay\Gateway\Response\TxnIdHandler</item>
                <item name="fraud" xsi:type="string">Pace\Pay\Gateway\Response\FraudHandler</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Value handlers infrastructure -->
    <virtualType name="PayValueHandlerPool" type="Magento\Payment\Gateway\Config\ValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">PayConfigValueHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="PayConfigValueHandler"
                 type="Magento\Payment\Gateway\Config\ConfigValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">PayConfig</argument>
        </arguments>
    </virtualType>

    <type name="Pace\Pay\Block\Info">
        <arguments>
            <argument name="config" xsi:type="object">PayConfig</argument>
        </arguments>
    </type>

    <type name="\Magento\Sales\Model\Order\Email\Sender\OrderSender">
        <plugin name="PacePayOrderSenderPlugin"
                type="Pace\Pay\Plugins\OrderSenderPlugin"/>
    </type>

    <type name="Magento\Sales\Api\OrderRepositoryInterface">
        <plugin name="PacePayOrderStatePlugin"
                type="Pace\Pay\Plugins\OrderSavePlugin"/>
    </type>

    <!-- Pace Multiple Widgets -->
    <type name="Magento\Catalog\Block\Product\ListProduct">
        <plugin name="PacePayMultipleWidget" 
                type="Pace\Pay\Plugins\PaceProductPlugin"/>
    </type>

    <type name="Magento\Framework\View\Asset\Minification">
        <plugin name="PaceExcludeMinifyScript" 
                type="Pace\Pay\Plugins\ExcludeFilesFromMinification" />
    </type>
</config>
