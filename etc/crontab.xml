<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
    <group id="pace_pay">
        <job name="pace_pay_cron" instance="Pace\Pay\Cron\VerifyTransaction" method="execute">
            <schedule>45 * * * *</schedule>
        </job>
        <job name="pace_pay_refresh_payment_plans_cron" instance="Pace\Pay\Cron\RefreshPaymentPlans"
             method="execute">
            <schedule>45 */3 * * *</schedule>
        </job>
    </group>
</config>
