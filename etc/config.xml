<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <pace_pay>
                <!-- preference -->
                <debug>0</debug>
                <model>PayFacade</model>
                <active>0</active>
                <title>Pay with Pace</title>
                <currency>SGD</currency>
                <sort_order>1</sort_order>
                <is_gateway>1</is_gateway>
                <payment_action>initialize</payment_action>
                <can_void>1</can_void>
                <can_refund>1</can_refund>
                <can_capture>1</can_capture>
                <can_authorize>1</can_authorize>
                <can_initialize>1</can_initialize>
                <can_use_checkout>1</can_use_checkout>
                <!-- custom -->
                <environment>playground</environment>
                <generate_invoice>1</generate_invoice>
                <pay_with_pace_mode>redirect</pay_with_pace_mode>
                <single_product_active>1</single_product_active>
                <multi_products_active>0</multi_products_active>
                <multi_products_active>0</multi_products_active>
                <voucher_tag_enable>0</voucher_tag_enable>
                <voucher_tag_style>font-size: 12px; padding: 5px; margin: auto; border-radius: 5px; font-weight: bold; display: inline-block;</voucher_tag_style>
                <voucher_tag_country>S$10</voucher_tag_country>
                <voucher_tag_background_color>#bedc3a</voucher_tag_background_color>
            </pace_pay>
        </payment>
    </default>
</config>
